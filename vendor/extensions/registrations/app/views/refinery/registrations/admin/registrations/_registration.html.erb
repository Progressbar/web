<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to registration.name, refinery.registrations_admin_registration_path(registration) %> <%= t('.said') %>
    <span class="preview"><%= truncate(strip_tags(registration.message), :length => 60) -%></span>
  </span>
  <span class='actions'>
    <% if current_refinery_user.has_role?(:superuser) %>
      <%= link_to refinery_icon_tag("cross.png"),
        refinery.reject_registrations_admin_registration_path(registration),
        :title => t('.reject') unless registration.rejected? %>

      <%= link_to refinery_icon_tag("tick.png"),
        refinery.approve_registrations_admin_registration_path(registration),
        :title => t('.approve') unless registration.approved? %>

      <%= link_to refinery_icon_tag('delete.png'), refinery.registrations_admin_registration_path(registration),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => registration.name),
        :'data-method' => "delete" -%>
    <% end %>
    <%= link_to refinery_icon_tag('zoom.png'), refinery.registrations_admin_registration_path(registration),
      :title => t('.read_registration') -%>
  </span>
</li>
