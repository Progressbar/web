<section id="follow-us">
  <header>
    <h3><%= t('follow_us.title') %></h3>
  </header>
  <div class="content clearfix">
    <p>
      <a href="<%= Refinery::Setting.get(:site_twitter_link) %>"><img alt="Twitter" src="/s.gif" class="sprites sprite-icon-twitter-32" /></a>
      <a href="<%= Refinery::Setting.get(:site_facebook_link) %>"><img alt="Facebook" src="/s.gif" class="sprites sprite-icon-facebook-32" /></a>
      <a href="<%= Refinery::Setting.get(:site_foursquare_link) %>"><img alt="Foursquare" src="/s.gif" class="sprites sprite-icon-foursquare-32" /></a>
      <a href="<%= Refinery::Setting.get(:site_soup_link) %>"><img alt="Soup" src="/s.gif" class="sprites sprite-icon-soup-32" /></a>
      <a href="<%= Refinery::Setting.get(:site_github_link) %>" >
        <img alt="Github" src="/s.gif" class="sprites sprite-icon-github-32" />
      </a>
       <a href="<%= Refinery::Setting.get(:site_kyberia_link) %>" >
        <img alt="Kyberia" src="/s.gif" class="sprites sprite-icon-kyberia-32" title="kyberia" />
      </a>
    </p>
    <div>
      <a href="/refinery/users/login">
        <img src="/assets/design/icons/member.png" style="vertical-align: middle">&nbsp;
        Prihlásenie - členská sekcia</a>
      <a href="/pridaj-sa">
        <img src="/assets/design/icons/arrow-2.png" style="vertical-align: middle">&nbsp;
        Registrácia
      </a>
    </div>
    <div id="feedback"></div>
  </div>
</section>
<section id="mailing-list">
  <header>
    <h3><%= t('mailing_list.title') %></h3>
  </header>
  <div class="content">
    <%= render "/refinery/mailinglists/mailinglists/form" %>
  </div>
</section>
<section id="address" >
  <header>
    <h3 class="hidden"><%= t('address.title') %></h3>
  </header>
  <div class="content">
    <address class="vcard">
      <a class="url fn org " href="http://www.progressbar.sk/"><%= Refinery::Core.site_name %></a>,
      <a class="email" href="mailto:<%= Refinery::Setting.get(:site_email) %>"><%= Refinery::Setting.get(:site_email) %></a>,
      <span class="adr">
        <span class="street-address"><%= Refinery::Setting.get(:site_location_street) %></span>,
        <span>
          <span class="locality"><%= Refinery::Setting.get(:site_location_city) %></span>,
          <span class="postal-code"><%= Refinery::Setting.get(:site_location_postal_code) %></span>,
        </span>
        <span class="country-name"><%= Refinery::Setting.get(:site_location_country) %></span>
      </span>
      <span class="delim">&nbsp;|&nbsp;</span>
      <span class="geo">
        GPS:
        <abbr class="latitude" title="<%= Refinery::Setting.get(:site_location_latitude_title) %>"><%= Refinery::Setting.get(:site_location_latitude) %></abbr>
        <abbr class="longitude" title="<%= Refinery::Setting.get(:site_location_longitude_title) %>"><%= Refinery::Setting.get(:site_location_longitude) %></abbr>
      </span>
    </address>

  </div>
</section>
<div id="license">
  <%= raw t('license_note') %>
</div>
<div id="copy">
  <%= t('.copyright', :year => Time.now.year,
    :site_name => Refinery::Core.site_name) %>,
  <%#= link_to(@colophon_page.title, @colophon_page) %>
</div>
<nav id='bottom-menu' class='menu clearfix'>
  <%= link_to(@blog_page.title, @blog_page.url) %> <span class="delim">&nbsp;|&nbsp;</span>
  <%= link_to(@contact_page.title, @contact_page.url) %> <span class="delim">&nbsp;|&nbsp;</span>
  <a href="#"><%= t('top') %>  &uarr;</a>
</nav>
