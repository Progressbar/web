<%= form_tag search_url, :method => 'GET', :id => 'search-form' do %>
<%= search_field_tag :query, {}, {:type => 'search',
                     :placeholder => t('.search_site_for'),
                     :class => 'text search',
                     :required => 'required',
                     :value => (params[:query] if params[:query])} %>
<input type="image" title="<%= t('submit') %>" src="data:image/png;base64," class="search-button" alt="Submit button">
<% end %>
