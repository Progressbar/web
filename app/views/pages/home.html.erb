<% content_for :body_content_right do %>

  <% @news_items = NewsItem.where(:id => ::NewsItem::Translation.where(:locale => I18n.locale).last(RefinerySetting.find_or_set(:snippet_items_per_page, 5)).collect(&:news_item_id)) %>
  <% if @news_items.any? %>
    <div class="box" id="latest-news">
      <h3><%= t('news_and_events') %></h3>
      <ul class="list-of-links">
        <% @news_items.each do |item| %>
          <li>
            <%= truncate  item.body, :length => 240,
              :omission => " ... #{link_to t('.read_more'), news_item_url(item)}",
              :preserve_html_tags => true %>
          </li>
        <% end %>
      </ul>
      <p>
        <%= link_to :action => 'index', :controller => 'news_items' do -%>
          <%= t('more_news_and_events') %> <span class="float-right">&raquo;</span>
        <% end %>
      </p>
    </div>
  <% end %>
<% end %>
