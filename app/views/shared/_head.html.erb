<head>
  <meta charset="<%= ::Refinery::Application.config.encoding %>" />
  <!--[if IE ]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
  <title><%= browser_title(yield(:title)) %></title>
  <%= raw '<meta name="description" content="#{@meta.meta_description}" />' if @meta.meta_description.present? -%>
  <%= raw '<meta name="keywords" content="#{@meta.meta_keywords}" />' if @meta.meta_keywords.present? -%>
  <%= csrf_meta_tag if RefinerySetting.find_or_set(:authenticity_token_on_frontend, true)-%>
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <%= yield :meta %>
  <%= stylesheet_link_tag stylesheets_for_head(stylesheets||=%w(sprites fancybox jquery-ui/css/vader/jquery-ui-1.8.13.custom.css application narrow), theme ||= nil), :cache => false %>
  <%#= stylesheet_link_tag stylesheets_for_head(stylesheets||=%w(sprites fancybox jquery-ui/css/vader/jquery-ui-1.8.13.custom.css application), theme ||= nil), :cache => 'styles' %>
  <%= yield :stylesheets %>
  
  <link rel="alternate" type="application/rss+xml" title="ProgressbarSk Calendar RSS" href="/events.rss" />
  <link rel="alternate" type="application/rss+xml" title="ProgressbarSk Blog RSS" href="/blog/feed.rss" />
  <%#= javascript_include_tag 'modernizr-min' %>
  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>