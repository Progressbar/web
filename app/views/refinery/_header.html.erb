    <h1 id="logo"><span class="ir"><%= Refinery::Core.site_name %></span></h1>
  <% else %>
    <strong id="logo">
      <%= link_to Refinery::Core.site_name, refinery.root_path, :class => 'ir' %>
    </strong>
  <% end %>
</div>
