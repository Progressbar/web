<div id="hgroup">
  <% if is_homepage?() %>
    <h1 id="logo"><span class="ir"><%= RefinerySetting.find_or_set(:site_name, "Company Name") %></span></h1>
  <% else %>
    <strong id="logo">
      <% link_to root_path do %>
        <span class="ir"><%= RefinerySetting.find_or_set(:site_name, "Company Name") %></span>
      <% end  %>
    </strong>
  <% end %>
</div>
<div id="nav-holder">
  <nav id="lang">
    <%# memb_section = Page.find(17) %>
    <%#= link_to(memb_section.title, memb_section.url) %><!-- <span class="delim">&nbsp;|&nbsp;</span>-->
    <%= link_to_if(!is_lang?('sk'), 'Slovenčina', '/') %><span class="delim">&nbsp;|&nbsp;</span><%= link_to_if(!is_lang?('en'), 'English', url_for(:locale => 'en')) %>
  </nav>
<% form_tag search_url, :id => 'search-form' do -%>
<%= search_field_tag :query, {}, {:type => 'search',
                   :placeholder => t('Search site for...'),
                   :class => 'text search',
                   :required => 'required',
                   :value => (params[:query] if params[:query])} %>
<%= image_submit_tag('/images/design/search-dark.png', :class => 'search-button') %>
<% end %>
  <%= render :partial => "/shared/menu",
    :locals => {
    :dom_id => 'menu',
    :css => 'menu'
  } -%>
</div>
  <%= render :partial => "/shared/promo" if is_homepage? -%>
