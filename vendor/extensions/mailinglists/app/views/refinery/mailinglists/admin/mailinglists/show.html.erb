<div id='records'>
  <h2><%= t('.subscriber') %></h2>
  <table id='subscriber' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.subscriber.email')) %>
          </strong>
        </td>
        <td>
          <%= @subscriber.email %>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@subscriber.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_subscribers'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.mailinglists.admin.subscribers'),
                  refinery.mailinglists_admin_subscriber_path(@subscriber),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.mailinglists.admin.subscribers'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @subscriber.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
