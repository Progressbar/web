<%= render 'submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
    <% if @<%= plural_name %>.any? %>
      <ul>
        <%= render :partial => 'subscriber', :collection => @<%= plural_name %> %>
      </ul>
    <% else %>
      <p><%= t('shared.admin.search.no_results') %></p>
    <% end %>
  <% else %>
    <% if @grouped_<%= plural_name %>.any? -%>
      <% @grouped_<%= plural_name %>.each do |container| %>
        <h3><%= l((subscriber_group = container.last).first.created_at) %></h3>
        <ul>
          <%= render :partial => 'subscriber', :collection => subscriber_group %>
        </ul>
      <% end %>
    <% else -%>
      <p>
        <strong><%= t('.no_spam') %></strong>
      </p>
    <% end -%>
  <% end %>
</div>
