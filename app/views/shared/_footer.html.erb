<section id="follow-us">
  <header>
    <h3><%= t('follow_us.title') %></h3>
  </header>
  <div class="content">
    <p class="float-left">
      <a  class="no-underline" href="<%= RefinerySetting.find_or_set(:site_twitter, 'http://twitter.com/progressbarsk') %>"><img alt="Twitter icon" src="/images/s.gif" class="sprites sprite-icon-twitter-32" /> Twitter</a>
    </p>
    <p class="float-left">
      <a class="no-underline" href="<%= RefinerySetting.find_or_set(:site_facebook, 'http://www.facebook.com/progressbar') %>"><img alt="Facebook icon" src="/images/s.gif" class="sprites sprite-icon-facebook-32" /> Facebook</a>      
    </p>
    <!--
    <p>
      <a class="no-underline" href="https://foursquare.com/venue/<%= RefinerySetting.find_or_set(:site_foursquare_id, '7713190') %>"><img alt="Facebook icon" src="/images/s.gif" class="sprites sprite-icon-facebook-32" /> FourSquare</a>
    </p>
    -->
    <div class="reset">&nbsp;</div>
    <p>
      <%= t('follow_us.find_bug') %>
    </p>
    <p>
      <a class="no-underline" href="<%= RefinerySetting.find_or_set(:site_github, 'https://github.com/Progressbar') %>" >
        <img alt="Github icon" src="/images/s.gif" class="sprites sprite-icon-github-32" title="<%= t('follow_us.visit_github') %>" />
        Github 
        <span class="action-button"><%= t('follow_us.send_patch') %></span>
      </a>
    </p>
    <p>
      <%= t('follow_us.send_email') %>
    </p>
    <p>
      <a class="no-underline" href="mailto:<%= RefinerySetting.find_or_set(:site_webmaster_email, 'webmaster@progressbar.sk') %>" title="<%= t('follow_us.send_email') %>" ><img src="/images/s.gif" alt="E-mail icon" class="sprites sprite-icon-email-32" />
        E-mail
        <span class="action-button"><%= RefinerySetting.find_or_set(:site_webmaster_email, 'webmaster@progressbar.sk') %></span>
      </a>
    </p>
  </div>
</section>
<section id="mailing-list">
  <header>
    <h3><%= t('mailing_list.title') %></h3>
  </header>
  <div class="content">
    <form method="POST" action="/mailing-list">
      <p>
        <input type="checkbox" name="type" value="general" id="type-general"/>
        <label for="type-general"><%= t('mailing_list.general_type') %></label><br />
        <input type="checkbox" name="type" value="events" checked="checked" id="type-events"/>
        <label for="type-events"><%= t('mailing_list.events_type') %></label>
      </p>
      <p><input type="email" name="email" placeholder="<%= t('mailing_list.put_email') %>" class="text email" required="required" /><input class="submit" type="submit" value="<%= t('mailing_list.sign_in') %>"/></p>
      <p class="msg info">
        <img alt="info icon" src="/images/s.gif" class="ui-icon ui-icon-info" />
        <%= t('mailing_list.info_privacy') %>
        <br /><br />
        <%= t('mailing_list.info_logout') %>
      </p>
    </form>
  </div>
</section>
<section id="address" >
  <header>
    <h3 class="hidden"><%= t('address.title') %></h3>
  </header>
  <div class="content">
    <address class="vcard">
        <a class="url fn org " href="http://www.progressbar.sk/">Progressbar Hackerspace</a>, 
        <a class="email" href="mailto:<%= RefinerySetting.find_or_set(:site_contact_email, 'info@progressbar.sk') %>"><%= RefinerySetting.find_or_set(:site_contact_email, 'info@progressbar.sk') %></a>, 
        <span class="adr">
          <span class="street-address">Cukrová 14</span>,
          <span>
            <span class="locality">Bratislava</span>,
            <span class="postal-code">94107</span>,
          </span>
          <span class="country-name">Slovakia</span>
        </span>
        <span class="delim">&nbsp;|&nbsp;</span>
      <span class="geo">
        GPS: 
        <abbr class="latitude" title="48.14853">N 48° 8' 54.707"</abbr>
        <abbr class="longitude" title="17.119582">E 17° 7' 10.495"</abbr>
      </span>
    </address>

  </div>
</section>
