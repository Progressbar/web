<%= form_for [refinery, :mailinglists, @mailinglist] do |f| %>
  <% unless @mailinglist.errors.blank? %>
    <div class="form-error">
      <% @mailinglist.errors.each do |elm, msg| %>
        <p><%= t(elm.to_s) %> <%= msg %></p>
      <% end %>
    </div>
  <% end %>
  
  <p>
    <%= f.check_box :general %>
    <%= f.label :general, t('.general_type'), :class => '' %>
    <br />
    <%= f.check_box :events %>
    <%= f.label :events, raw(t('.events_type')), :class => '' %>
  </p>
  <div class="field">
    <%= f.label :email, t('.put_email'), :class => 'placeholder-fallback required' %>
    <%= f.email_field :email, :placeholder => t('.put_email'), :required => 'required', :class => 'required email text' %><%= f.submit t('.sign_in') %>
  </div>
  <p class="msg info">
    <img alt="info icon" src="/s.gif" class="ui-icon ui-icon-info" />
    <%= t('.info_privacy') %>
    <br /><br />
    <%= t('.info_logout') %>
  </p>
<% end %>